!!! 5
html(lang='en')
  head
      meta(charset='utf-8')
      title #{title}
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      meta(name="description",content='Zero-Configuration Static Site Generator')
      meta(name="keywords",content='nodejs,handsome guy')
      meta(name="author",content='Michael Yin')
      link(rel='stylesheet',href='#{rootPath}/css/bootstrap.css')
      style
        body {
          padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        #github{
          z-index:10000;
          position:fixed;
          right:0;
          top:0;
        }
      link(rel='stylesheet',href='#{rootPath}/css/bootstrap-responsive.css')
  body
    
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#{rootPath}/') markem
          .nav-collapse.collapse
            ul.nav
              for dir in globals.root.dirs
                li
                  a(href='#{rootPath}#{dir.path}') #{dir.title}
    .container
      artical !{content}
      for dir in dirs
        p
          a(href='#{rootPath}#{dir.path}') #{dir.title}
      for file in files
        p
          a(href='#{rootPath}#{file.path}') #{file.title}
      footer
        p
          | Â© 2012  Michael Yin
    script(src='#{rootPath}/js/jquery.js')
    script(src='#{rootPath}/js/bootstrap.js')
    script(src='#{rootPath}/js/modernizr.js')
    a(id="github",href="https://github.com/layerssss/markem/blob/master#{pathSource}")
      img(src="http://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png",alt="Fork me on GitHub")